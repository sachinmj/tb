<%= form_for @page do |form| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :layout %>
    <%= form.text_field :layout %>
  </div>

  <div class="field">
    <%= form.label :has_header %>
    <%= form.check_box :has_header %>
  </div>

  <div class="field">
    <%= form.label :has_footer %>
    <%= form.check_box :has_footer %>
  </div>

  <div class="field">
    <%= form.label :is_printable %>
    <%= form.check_box :is_printable %>
  </div>

  <div class="field">
    <%= form.label :is_full_width %>
    <%= form.check_box :is_full_width %>
  </div>

  <%= form.fields_for :components, @page.components do |comp| %>
    <div class="field">
      <%= comp.label :name %>
      <%= comp.text_field :name %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
