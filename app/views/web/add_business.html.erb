<div class="row">
    <div class="col-sm-8">
      <h1>Register your Business</h1>
      <!-- <p>Find me in app/views/web/add_business.html.erb</p> -->

      <%= render 'form', business: @business %>
    </div>
    <div class="col-sm">
      One of three columns
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="category_list_modal" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="category_list_modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="category_list_modalLabel">Select Business Categories (<span data-bind="text: self.AllTags().length"></span>)</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body tag-modal-h">
        <% # render 'taglist', tags: @tags %>

        <div class="input-group mb-3">
          <input type="text" class="form-control" data-bind="value: searchTerm, valueUpdate: 'afterkeydown'" placeholder="Search" aria-label="Search" aria-describedby="Search">
          <div class="input-group-append">
            <span class="input-group-text" id="basic-addon2">
              <i class="fa fa-search" data-bind="visible: searchTerm().length == 0"></i>
              <!-- <i class="fas fa-times"></i> -->
              <i class="fas fa-times" data-bind="visible: searchTerm().length > 0 , event: {click: clearSearch} "></i>
            </span>
          </div>
        </div>

        <div class="alert alert-primary" role="alert" data-bind="visible: hasSelectedTags">
          <div class="float-right">
            <a href="#" class="badge badge-danger" data-bind="css: {'d-none': undoEnabled()}, event: {click: clearSelectedTags }">Clear Selection</a>
            <a href="#" class="badge badge-danger" data-bind="css: {'d-none': !undoEnabled()}, event: {click: UndoClearTags }">Undo Clear</a>
            <!-- <span class="btn">Clear Selection</span> -->
          </div>
          You have selected <span data-bind="text: SelectedTags().length"></span> Tags
        </div>

        <div class="alert alert-primary" role="alert" data-bind="visible: !hasSelectedTags()">
          Please select 5 tags that best describe your business.
        </div>


        <ul data-bind="foreach: AllTags" class="nav nav-pills tag-selector">
          <li class="nav-item" >
            <a href="#" class="nav-link"
              data-bind="text:name,
                          css: { active : isSelected,
                                disabled: $parent.allTagsSelected(),
                                'd-none': !isFiltered(),
                                'border': aboutToClear
                                },
                          event: {click: $parent.selectTag}"></a>
          </li>
        </ul>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>
